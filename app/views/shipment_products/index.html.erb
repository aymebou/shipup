<p id="notice"><%= notice %></p>

<h1>Shipment Products</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Shipment</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipment_products.each do |shipment_product| %>
      <tr>
        <td><%= shipment_product.product %></td>
        <td><%= shipment_product.shipment %></td>
        <td><%= shipment_product.quantity %></td>
        <td><%= link_to 'Show', shipment_product %></td>
        <td><%= link_to 'Edit', edit_shipment_product_path(shipment_product) %></td>
        <td><%= link_to 'Destroy', shipment_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

